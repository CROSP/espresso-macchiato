<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="de.nenick.espressomacchiato">

    <!-- uiautomator force android v18 but it is only used for devices with v23 or higher
         so we still can support lower android versions -->
    <uses-sdk tools:overrideLibrary="android.support.test.uiautomator.v18" />

    <!-- permission necessary for contact picker tests -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <application>
        <activity
            android:name=".testbase.EspDummyLauncherActivity"
            android:label="Dummy Launcher" />
    </application>

</manifest>
